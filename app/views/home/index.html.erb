<!-- each loop to load all currencies -->
<div>
  <% @prices["DISPLAY"].each do |k, y| %>
    <%= k %> - <%= y["USD"]["PRICE"] %><br/>
    24hr High: <%= y["USD"]["HIGHDAY"] %><br/>
    24hr Low: <%= y["USD"]["LOWDAY"] %><br/>
    Market Cap: <%= y["USD"]["LOWDAY"] %><br/>
    <br/><hr/><br/>
  <% end %>

</div>

<!-- news cards here -->
<div class="container">
  <div class="row">
    <% @news["Data"].each do |n|  %>
        <div class="col-sm">
          <div class="card" style="width: 18rem;">
            <img src="<%= n["imageurl"]  %>" class="card-img-top" alt="<%= n["source"] %>">
            <div class="card-body">
              <h5 class="card-title"><%= n["body"] %></h5>
              <p class="card-text"><%= n["body"] %></p>
              <a href="<%= n["url"] %>" class="btn btn-secondary">Read more... </a>
            </div>
          </div>
        </div>
        <br/>
    <% end %>
  </div>
</div>



